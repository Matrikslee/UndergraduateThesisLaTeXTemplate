%% Require cnabstract, cnkeyword, enabstract, enkeywords.

\RequirePackage{abstract}

\newcommand*{\cnabstractkeywords}[2]{
  \def\@cnabstract{#1}
  \def\@cnkeywords{#2}
}

\newcommand*{\enabstractkeywords}[2]{
  \def\@enabstract{#1}
  \def\@enkeywords{#2}
}

\newcommand*{\makeabstract}{
  \newpage
  \vspace{20mm}
  \ifdefined\@cnabstract{
    \renewcommand\abstractname{\zihao{-3}{\heiti{摘\ \ \ 要}}}
    \begin{abstract}
      \zihao{-4}{\songti{\@cnabstract}}\par
      \zihao{-4}{\heiti{\textbf{关键词: \@cnkeywords}}}
    \end{abstract}
    \vspace{5mm}
  }
  \fi
  \ifdefined\@enabstract{
    \renewcommand\abstractname{\zihao{-3}{\sffamily{Abstract}}}
    \begin{abstract}
      \zihao{-4}{\rmfamily{\@enabstract}}\par
      \zihao{-4}{\sffamily{\textbf{Keywords: \@enkeywords}}}
    \end{abstract}
  }
  \fi
  \newpage
}
